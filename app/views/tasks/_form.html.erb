<div class="container">
  <%= form_with(model:@task) do |f| %>
  <div class="mb-3">
    <%= f.label :name,"Task Name", class:'form-label' %> <%= f.text_field :name,
    class:'form-control', placeholder:'Enter Task' %>
  </div>
  <div class="mb-3">
    <%= f.label :desc,"Description", class:'form-label' %> <%=
    f.text_field:desc, class:'form-control', placeholder:'Enter Description' %>
  </div>
  <div class="mb-3">
    <%= f.label :hours,"Hours", class:'form-label' %> <%= f.text_field :hours,
    class:'form-control', placeholder:'Enter Hours' %>
  </div>
  <div class="mb-3">
    <%= f.label :project,"Projects", class:'form-label' %> <%=
    f.collection_select :project_id, Project.all, :id, :name %>
  </div>
  <div class="mb-3">
    <%= f.label :employee,"Employee", class:'form-label' %> <%=
    f.collection_select :employee_id, Employee.all,:id,:name %>
  </div>
  <div>&nbsp;<%= f.submit class:'btn btn-success' %></div>
  <% end %>
</div>
