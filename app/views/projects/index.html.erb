<br />
<div class="p-3 mb-2 bg-primary text-black container rounded-3">
  <h2><center>Project Details</center></h2>
</div>
<br />
 <% @projects.each do |p| %>
<div class="container">
  <div class="card border-secondary mb-3">
    <div class="card-header">No:<%= p.id %></div>
    <div class="card-body text-secondary">
      <h5 class="card-title"><strong>Name:</strong><%= p.name %></h5>
      <p class="card-text"><strong>Description:</strong><%= p.desc %></p>
      
       <% p.tasks.each do |task| %>
      <p>
        <strong>Tasks:</strong>
        <%= task.name %>
      </p>
      <% end %> <% p.employees.each do |emp| %>
      <p>
        <strong>employee<%= emp.id %>:</strong>
        <%= emp.name %>
      </p>
      <% end %>
      <% p.comments.order(id: :desc).each do |c| %>
      <p>
        <strong>Comments:</strong>
        <%= c.body %>
      </p><% end %>
       <%= link_to 'Add Comment',new_project_comment_path(p), class:'btn btn-primary btn-sm', remote: true %>
       <%= link_to 'Task details', tasks_index_path(p), class:'btn btn-success btn-sm' %>  
    </div>
  <div id="form"></div><br>
  </div>
</div>
<% end %>




